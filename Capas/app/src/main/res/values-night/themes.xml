<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base Oscuro -->
    <style name="Base.Theme.Capas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales para modo oscuro -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Colores de superficie y fondo para tema oscuro -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>

    <!-- Tema Oscuro EspecÃ­fico -->
    <style name="Theme.Capas.Dark" parent="Base.Theme.Capas">
        <!-- Forzar modo oscuro -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

    <!-- Tema principal que hereda de Base -->
    <style name="Theme.Capas" parent="Base.Theme.Capas" />

    <!-- Tema sin ActionBar -->
    <style name="Theme.Capas.NoActionBar" parent="Theme.Capas">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>