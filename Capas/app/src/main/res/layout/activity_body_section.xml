<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".BodySectionActivity">

    <!-- Header con tÃ­tulo y switch -->
    <LinearLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/purple_500"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"
            tools:text="Cabeza" />

        <!-- Switch para cambiar tema -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <Switch
                android:id="@+id/theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/white"
                android:trackTint="@color/purple_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema"
                android:textSize="10sp"
                android:textColor="@color/text_white"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/section_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Imagen de la secciÃ³n del cuerpo"
        android:transitionName="shared_body_transition"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/section_info_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_header"
        app:layout_constraintWidth_percent="0.9"
        tools:src="@drawable/head_detail" />

    <!-- Container para puntos de interÃ©s -->
    <FrameLayout
        android:id="@+id/points_of_interest_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/section_image"
        app:layout_constraintEnd_toEndOf="@+id/section_image"
        app:layout_constraintStart_toStartOf="@+id/section_image"
        app:layout_constraintTop_toTopOf="@+id/section_image">

        <!-- Puntos de interÃ©s para la cabeza -->
        <View
            android:id="@+id/poi_eyes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_mouth"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="370dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_brain"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <!-- Puntos de interÃ©s para el torso -->
        <View
            android:id="@+id/poi_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_lungs"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_stomach"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <!-- Puntos de interÃ©s para las piernas -->
        <View
            android:id="@+id/poi_knee"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="300dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_thigh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="-20dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_foot"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="180dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:transitionName="shared_part_transition"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/section_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/info_panel_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>