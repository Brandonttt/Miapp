<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".BodySectionActivity">

    <!-- Header unificado -->
    <LinearLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/section_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                tools:text="Cabeza" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ™"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="?attr/colorOnPrimary" />

                <Switch
                    android:id="@+id/theme_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="?attr/colorOnPrimary"
                    android:trackTint="?attr/colorPrimaryVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tema"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp"
                    android:textColor="?attr/colorOnPrimary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Imagen principal de la secciÃ³n -->
    <ImageView
        android:id="@+id/section_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:transitionName="shared_body_transition"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/section_header"
        app:layout_constraintBottom_toTopOf="@id/section_info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        tools:src="@drawable/head_detail" />

    <!-- Contenedor para puntos de interÃ©s encima de la imagen -->
    <FrameLayout
        android:id="@+id/points_of_interest_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/section_image"
        app:layout_constraintBottom_toBottomOf="@id/section_image"
        app:layout_constraintStart_toStartOf="@id/section_image"
        app:layout_constraintEnd_toEndOf="@id/section_image">

        <!-- Puntos de interÃ©s Cabeza -->
        <View
            android:id="@+id/poi_eyes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_mouth"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="370dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_brain"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/poi_indicator"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <!-- Puntos de interÃ©s Torso -->
        <View
            android:id="@+id/poi_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/poi_indicator"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_lungs"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:background="@drawable/poi_indicator"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_stomach"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/poi_indicator"
            android:visibility="gone" />

        <!-- Puntos de interÃ©s Piernas -->
        <View
            android:id="@+id/poi_knee"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="300dp"
            android:background="@drawable/poi_indicator"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_thigh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="-20dp"
            android:background="@drawable/poi_indicator"
            android:visibility="gone" />

        <View
            android:id="@+id/poi_foot"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="180dp"
            android:background="@drawable/poi_indicator"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Panel info (fragment container) -->
    <FrameLayout
        android:id="@+id/section_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/info_panel_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>